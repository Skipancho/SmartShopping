<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyPageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_person_24_white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="마이페이지"
            android:textSize="25dp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:id="@+id/myPageID"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:id="@+id/myPageNickname"/>

        </LinearLayout>
        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="로그아웃"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_shape_no_line"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/userInfoBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_shape_no_line"
            android:gravity="center"
            android:text="내 정보 확인"
            android:textSize="20dp" />

        <Button
            android:id="@+id/pur_inq_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_shape_no_line"
            android:text="구매 내역"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/chart_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_shape_no_line"
            android:text="지출 통계"
            android:textSize="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tutorial_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_alignParentBottom="true"
                android:drawableStart="@drawable/ic_round_slideshow_24"
                android:drawableLeft="@drawable/ic_round_slideshow_24"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="튜토리얼 다시보기"/>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>