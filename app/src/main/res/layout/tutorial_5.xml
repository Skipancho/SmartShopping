<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_70"
    android:paddingRight="30dp"
    android:paddingLeft="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white">
        <!--header-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/home_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/logo_img"/>
            <TextView
                android:id="@+id/header_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="상품 인식"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:padding="10dp"/>
            <Button
                android:id="@+id/mypage_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_baseline_person_24_white"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/barcodeScn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorGray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:visibility="gone"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/barcodeNum"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:hint="상품 코드"
                android:gravity="center"/>

            <Button
                android:id="@+id/photoScanBtn"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="카메라 인식"
                android:background="@drawable/empty_shape_line"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/p_Inq"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="상품 조회"
                android:background="@drawable/empty_shape_line"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:background="@color/black_70">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:drawableStart="@drawable/arrow_broken_down_left_white"
            android:drawableLeft="@drawable/arrow_broken_down_left_white"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:text="QR/바코드 리더"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/empty_shape_line_basic">
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:gravity="center"
                android:text="qr 또는 바코드를 인식합니다.\n(코드가 인식되면 조회 버튼이 활성화 됩니다.)"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/arrow_broken_down_left_white"
                android:drawableLeft="@drawable/arrow_broken_down_left_white"
                android:layout_gravity="center"
                android:layout_marginTop="65dp"
                android:layout_marginBottom="5dp"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:text="사진 촬영으로 상품을 인식합니다."/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/empty_shape_line_basic"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/empty_shape_line_basic"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/arrow_broken_up_white"
                android:drawableLeft="@drawable/arrow_broken_up_white"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:text="인식한 상품을 조회합니다."/>


        </LinearLayout>
    </LinearLayout>

</FrameLayout>